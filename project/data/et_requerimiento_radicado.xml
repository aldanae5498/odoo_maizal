<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="et_requerimiento_radicado" model="mail.template">
            <field name="name">Email Template - Requerimiento Radicado</field>
            <field name="model_id" ref="project.model_project_requerimiento"></field>
            <field name="email_from">${(object.user_id.email_formatted |safe}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="subject">Requerimiento Radicado: '${ctx['titulo']}'</field>
            <field name="body_html" type="html">
                <p>Estimado usuario ${ctx['nombre_cliente']}, sirva el presente correo electrónico para informarle su requerimiento ha sido radicado.</p>
                <p>Datos del Requerimiento:</p>
                <ol>
                    <li>Fecha de Radicación: <strong>${ctx['fecha']}</strong>.</li>
                    <li>Código: <strong>${ctx['name']}</strong>.</li>
                    <li>Título: <strong>${ctx['titulo']}</strong>.</li>
                </ol>
                <p>Saludos.</p>
            </field>
        </record>
    </data>
</odoo>
