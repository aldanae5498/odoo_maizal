<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="et_nuevo_requerimiento" model="mail.template">
            <field name="name">Email Template - Nuevo Requerimiento</field>
            <field name="model_id" ref="project.model_project_requerimiento"></field>
            <field name="email_from">${(object.user_id.email_formatted}</field>
            <field name="subject">Nuevo Requerimiento: ${(object.name}</field>
            <field name="body_html" type="html">
                <p>Estimado usuario, sirva el presente correo electrónico para informarle el registro de un requerimiento con los siguientes datos:</p>
                <ol>
                    <li>Código: <strong>${(object.name}</strong>.</li>
                    <li>Título: <strong>${(object.titulo}</strong>.</li>
                </ol>
                <p>Saludos.</p>
            </field>
        </record>
    </data>
</odoo>
