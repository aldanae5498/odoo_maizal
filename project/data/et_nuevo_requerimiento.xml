<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="et_nuevo_requerimiento" model="mail.template">
            <field name="name">Email Template - Nuevo Requerimiento</field>
            <field name="model_id" ref="project.model_project_requerimiento"></field>
            <!-- <field name="email_from">aldanae5498@gmail.com</field> -->
            <field name="email_to">${object.create_uid.login}</field>
            <field name="subject">Nuevo Requerimiento: '${object.titulo}'</field>
            <field name="body_html" type="html">
                <p>Estimado usuario ${object.create_uid.name}, sirva el presente correo electrónico para informarle qué ha registrado un nuevo requerimiento.</p>
                <p>Datos del Requerimiento:</p>
                <ol>
                    <!--    
                    <li>Datos del objeto: <strong>${object}</strong>.</li>
                    <li>Correo del creador del requerimiento: <strong>${object.create_uid.login}</strong>.</li>
                    -->
                    <li>Código: <strong>${object.name}</strong>.</li>
                    <li>Título: <strong>${object.titulo}</strong>.</li>
                </ol>
                <p>Saludos.</p>
            </field>
        </record>
    </data>
</odoo>
