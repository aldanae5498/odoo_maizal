<?xml version="1.0" encoding="utf-8"?>
<odoo>   
    <!-- ==================== Formulario (Radicado) - Cliente ==================== -->
    <record id="project_requerimiento_radicado_cliente" model="ir.ui.view">
        <field name="name">project.requerimiento.form.inherit.cliente</field>
        <field name="model">project.requerimiento</field>
        <field name="groups_id" eval="[(4,ref('project.group_project_gestor')), (4,ref('project.group_project_ingeniero')), (4,ref('project.group_project_lider')), (4,ref('project.group_project_director'))]"/>
        <field name="inherit_id" ref="project.project_requerimiento_radicado"/>
        <field name="arch" type="xml">
            <field name="titulo" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>      

</odoo>
